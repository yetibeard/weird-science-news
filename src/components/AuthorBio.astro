---
interface Props {
  name: string;
  role: string;
  avatar?: string;
  bio: string;
  expertise: string[];
  social: {
    twitter?: string;
    linkedin?: string;
  };
}

const { name, role, avatar, bio, expertise, social } = Astro.props;
const defaultAvatar = "/images/weird-science-logo.webp";
---

<div class="flex flex-col sm:flex-row gap-6 items-start bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm">
  <img
    src={avatar || defaultAvatar}
    alt={name}
    class="w-32 h-32 rounded-full object-cover border-2 border-gray-200 dark:border-gray-700"
  />
  
  <div class="flex-1">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">{name}</h2>
    <p class="text-blue-600 dark:text-blue-400 mb-4">{role}</p>
    
    <p class="text-gray-600 dark:text-gray-400 mb-4">{bio}</p>
    
    {expertise.length > 0 && (
      <div class="mb-4">
        <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Expertise</h3>
        <div class="flex flex-wrap gap-2">
          {expertise.map(topic => (
            <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-sm">
              {topic}
            </span>
          ))}
        </div>
      </div>
    )}
    
    <div class="flex space-x-4">
      {social.twitter && (
        <a
          href={social.twitter}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-blue-400 transition-colors"
          title={`Follow ${name} on Twitter`}
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
          </svg>
        </a>
      )}
      
      {social.linkedin && (
        <a
          href={social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-blue-700 transition-colors"
          title={`Connect with ${name} on LinkedIn`}
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z" />
            <circle cx="4" cy="4" r="2" />
          </svg>
        </a>
      )}
    </div>
  </div>
</div>
