---
const navItems = [
  { title: "Home", path: "/" },
  { title: "Topics", path: "/tags" },
  { title: "About", path: "/about" },
  { title: "Contact", path: "/contact" },
];

const currentPath = Astro.url.pathname;
---

<nav class="bg-white dark:bg-dark-bg shadow-sm dark:shadow-gray-800">
  <div class="container max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex flex-col items-center">
      <div class="flex items-center justify-center mb-4">
        <a href="/" class="flex items-center space-x-3">
          <img src="/images/weird-science-logo.webp" alt="Weird Science News Logo" class="h-12 w-auto" />
          <span class="text-2xl font-bold text-gray-900 dark:text-gray-100">
            Weird Science News
          </span>
        </a>
      </div>
      
      <div class="hidden sm:flex sm:space-x-8">
        {
          navItems.map(({ title, path }) => (
            <a
              href={path}
              class:list={[
                "inline-flex items-center px-1 pt-1 text-sm font-medium",
                {
                  "text-blue-600 dark:text-blue-400 border-b-2 border-blue-600 dark:border-blue-400":
                    currentPath === path,
                  "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300":
                    currentPath !== path,
                },
              ]}
            >
              {title}
            </a>
          ))
        }
      </div>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div class="sm:hidden">
    <div class="container max-w-4xl mx-auto px-4">
      <div class="pt-2 pb-3 space-y-1">
        {
          navItems.map(({ title, path }) => (
            <a
              href={path}
              class:list={[
                "block pl-3 pr-4 py-2 text-base font-medium text-center",
                {
                  "text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 border-l-4 border-blue-600 dark:border-blue-400":
                    currentPath === path,
                  "text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-gray-700 dark:hover:text-gray-300":
                    currentPath !== path,
                },
              ]}
            >
              {title}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</nav>
