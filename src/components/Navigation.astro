---
const navItems = [
  { title: "Home", path: "/" },
  { title: "Articles", path: "/articles" },
  { title: "About", path: "/about" },
  { title: "Contact", path: "/contact" },
];

const currentPath = Astro.url.pathname;
---

<nav class="bg-white dark:bg-dark-bg shadow-sm dark:shadow-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="text-2xl font-bold text-gray-900 dark:text-gray-100">
            ðŸ§ª WSN
          </a>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          {
            navItems.map(({ title, path }) => (
              <a
                href={path}
                class:list={[
                  "inline-flex items-center px-1 pt-1 text-sm font-medium",
                  {
                    "text-blue-600 dark:text-blue-400 border-b-2 border-blue-600 dark:border-blue-400":
                      currentPath === path,
                    "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300":
                      currentPath !== path,
                  },
                ]}
              >
                {title}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div class="sm:hidden">
    <div class="pt-2 pb-3 space-y-1">
      {
        navItems.map(({ title, path }) => (
          <a
            href={path}
            class:list={[
              "block pl-3 pr-4 py-2 text-base font-medium",
              {
                "text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 border-l-4 border-blue-600 dark:border-blue-400":
                  currentPath === path,
                "text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-gray-700 dark:hover:text-gray-300":
                  currentPath !== path,
              },
            ]}
          >
            {title}
          </a>
        ))
      }
    </div>
  </div>
</nav>
